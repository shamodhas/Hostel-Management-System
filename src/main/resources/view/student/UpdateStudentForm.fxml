<AnchorPane prefHeight="450.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.hms.controller.student.UpdateStudentFormController">
   <children>
      <AnchorPane layoutX="41.0" layoutY="32.0" prefHeight="174.0" prefWidth="159.0">
         <children>
            <ImageView fitHeight="139.0" fitWidth="134.0" layoutX="19.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="19.0" AnchorPane.topAnchor="0.0">
               <image>
                  <Image url="@../../assets/update_user.png" />
               </image>
               <effect>
                  <DropShadow />
               </effect>
            </ImageView>
            <Label fx:id="lblStudentId" alignment="CENTER" layoutY="155.0" prefHeight="25.0" prefWidth="159.0" text="S001">
               <font>
                  <Font name="DejaVu Serif Bold" size="16.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <Button fx:id="btnUpdate" layoutX="334.0" layoutY="377.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="49.0" prefWidth="102.0" style="-fx-background-color: #f39c12;" text="Update" textFill="WHITE">
         <font>
            <Font name="Arial Rounded MT Bold" size="18.0" />
         </font>
      </Button>
      <VBox layoutX="248.0" layoutY="32.0" spacing="15.0">
         <children>
            <VBox layoutX="10.0" layoutY="10.0" spacing="10.0">
               <children>
                  <Label text="NAME :" />
                  <TextField fx:id="txtName" promptText="Ex. Shamodha" />
               </children>
            </VBox>
            <VBox layoutX="10.0" layoutY="87.0" spacing="10.0">
               <children>
                  <Label text="ADDRESS :" />
                  <TextField fx:id="txtAddress" promptText="Ex. Kurunegala" />
               </children>
            </VBox>
            <VBox layoutX="10.0" layoutY="164.0" spacing="10.0">
               <children>
                  <Label text="CONTACT NO :" />
                  <TextField fx:id="txtContact" promptText="Ex. 0712345678" />
               </children>
            </VBox>
            <VBox layoutX="10.0" layoutY="241.0" spacing="10.0">
               <children>
                  <Label text="DOB :" />
                  <DatePicker fx:id="dpDOB" editable="false" prefHeight="25.0" prefWidth="376.0" />
               </children>
            </VBox>
            <VBox layoutX="10.0" layoutY="318.0" spacing="10.0">
               <children>
                  <Label text="GENDER :" />
                  <ComboBox fx:id="cmbGender" prefHeight="25.0" prefWidth="371.0" promptText="Select" />
               </children>
            </VBox>
         </children>
      </VBox>
      <Button fx:id="btnDelete" layoutX="488.0" layoutY="377.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="49.0" prefWidth="102.0" style="-fx-background-color: #e74c3c;" text="Delete" textFill="WHITE">
         <font>
            <Font name="Arial Rounded MT Bold" size="18.0" />
         </font>
      </Button>
   </children>
